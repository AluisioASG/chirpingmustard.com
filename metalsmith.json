{
  "source": "content",
  "destination": "_out",

  "plugins": {
    "metalsmith-ignore": [
      "styles/_*.css"
    ],
    "metalsmith-clean-css": {
      "cleanCSS": {
        "processImport": true,
        "relativeTo": "content/styles/"
      }
    },
    "metalsmith-templates": {
      "pattern": "*.html",
      "engine": "templayed",
      "directory": "templates",
      "default": "default.html"
    },
    "metalsmith-html-minifier": {
      "conservativeCollapse": true
    }
  }
}
