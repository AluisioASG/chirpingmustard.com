{
  "source": "content",
  "destination": "output",

  "plugins": {
    "metalsmith-metadata": {
      "navbar_links": "_data-navbar-links.yaml"
    },
    "metalsmith-ignore": [
      "_data-*.yaml"
    ],
    "metalsmith-clean-css": {
      "files": "content/styles/*.css",
      "cleanCSS": {
        "processImport": true,
        "relativeTo": "content/styles/"
      }
    },
    "metalsmith-layouts": {
      "pattern": "*.html",
      "engine": "handlebars",
      "directory": "layouts",
      "default": "default.html"
    },
    "metalsmith-html-minifier": {
      "conservativeCollapse": true
    }
  }
}
